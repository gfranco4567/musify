<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>

<%= form_with(model: [@playlist, @song] , local: true ) do |f| %>
<%= f.label :artist %>
<%= f.text_field :artist %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>
<% end %>

<h2>Songs</h2>
<ul>
  <% @songs.each do |song|%>
<li> <%= song.artist%> - <%= song.name %> -<%= link_to 'Delete', playlist_song_path(@playlist, song), method: :delete, data: { confirm: 'Are you sure?' } %>
</li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_playlist_path(@playlist) %>
<%= link_to 'Back', playlists_path %>
